# --- OpenAI-compatible Chat ---
OPENAI_API_KEY=
OPENAI_BASE_URL=

# --- LLM Model Filtering ---
# 正则表达式，仅允许匹配的模型出现在 /api/llm/models 列表中
LLM_ALLOWED_MODEL_REGEX=gpt
# 支持的模型列表（作为回退，逗号分隔）
LLM_SUPPORTED_MODELS=gpt-4o-mini

# --- Embeddings (for RAG) ---
EMBEDDINGS_BASE_URL=
EMBEDDINGS_API_KEY=
EMBEDDINGS_MODEL=

# --- Chroma Vector DB ---
CHROMA_BASE_URL=
CHROMA_COLLECTION=

# --- RAG Text Split ---
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200

# --- RAG Bootstrap (ingest files on startup) ---
RAG_BOOTSTRAP_ON_START=true
RAG_DOCS_DIR=rag_docs
RAG_BOOTSTRAP_NAMESPACE=repo-docs

# --- RAG Defaults for Chat ---
RAG_DEFAULT_ON=true
RAG_DEFAULT_NAMESPACE=repo-docs

# --- Web Search via MCP ---
# 本地 open-websearch-mcp 服务器
WEB_SEARCH_ENABLED=true

# ---MQ---
RABBITMQ_HOST=${RABBITMQ_HOST}
RABBITMQ_PORT=${RABBITMQ_PORT}
RABBITMQ_USERNAME=${RABBITMQ_USERNAME}
RABBITMQ_PASSWORD=${RABBITMQ_PASSWORD}
RABBITMQ_VHOST=${RABBITMQ_VHOST:/}
DATA_SERVICE_BASE_URL=http://${GATEWAY_HOST}:${GATEWAY_PORT}/api

# --- 环境变量 ---
RUN_WORKER=1


